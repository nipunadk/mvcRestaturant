@model   IEnumerable<GreenRestaturant.Models.RestaturantListviewModel>
@{
    ViewBag.Title = "Home Page";
}


<div>
    <form method="get">
        <input type="search" name="searchTerm" />
        <input type="submit" value="Search By Name" />

    </form>
</div>


<div>


    @foreach (var item in Model)
    {
        <div>
            <h4>  @item.Name</h4>
            <div> @item.City  , @item.Country </div>
        </div>
        <table>
            @foreach (var review in @item.Reviews)
            {
                <tr>

                    <td>
                        &nbsp; COMMENT : @Html.DisplayFor(modelItem => review.Body)
                    </td>
                    <td>
                        &nbsp; RATING : (@Html.DisplayFor(modelItem => review.Rating))
                    </td>

                </tr>

            }
                <tr>
                     Total Reviews : ( @item.CountOfReviews )
                </tr>

        </table>
        <hr />
    }

</div>

